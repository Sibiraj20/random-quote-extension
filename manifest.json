{
  "manifest_version": 3,
  "name": "Random Quote Extension",
  "version": "1.0",
  "description": "Displays a random quote each time the extension is opened.",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [
    {
      "resources": ["popup.css"],
      "matches": ["<all_urls>"]
    }
  ]
}
